[Unit]
Description=foundry server
After=network.target

[Service]
Type=forking
User=foundry
WorkingDirectory=/home/foundry/foundryvtt
ExecStart=node resources/app/main.js --dataPath=/home/foundry/foundrydata
Restart=on-failure
RestartSec=20

[Install]
WantedBy=multi-user.target
Alias=foundry.service
